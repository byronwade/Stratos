{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/*.{ts,tsx}!",
    "src/app/**/layout.tsx",
    "src/app/**/page.tsx"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "**/*.d.ts",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "node_modules/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "ultracite",
    "knip",
    "ts-prune",
    "depcheck",
    "madge"
  ],
  "next": {
    "entry": [
      "src/app/**/*.tsx",
      "src/app/**/*.ts",
      "!src/app/**/*.test.{ts,tsx}",
      "!src/app/**/*.spec.{ts,tsx}"
    ]
  }
}
